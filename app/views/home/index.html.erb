  <script>
    function flickerText(){
        var length = Math.floor(Math.random() * 120);
        jQuery("#portfolio").css('textShadow','#ffffff 1px 1px '+length+'px');
        jQuery("#portfolio").css('opacity',length/120 +.2);
        setTimeout(flickerText, 60);
    }
    jQuery(document).ready(function(){
        flickerText();
    });
  </script>