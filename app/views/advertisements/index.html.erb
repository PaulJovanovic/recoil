<%= link_to "Back", admins_path %>
<%= link_to "+ New Advertisement", new_advertisement_path %>

<table>
	<thead>
		<tr>
			<th class="actions">
				Order
			</th>
			<th class="image">
				Image
			</th>
			<th class="text">
				Title
			</th>
			<th class="text">
				Description
			</th>
			<th class="actions">
			</th>
			<th class="actions">
			</th>
		</tr>
	</thead>
	<tbody>
	<% @advertisings.each do |advertising| %>
		<tr>
			<td>
				<%= advertising.placement %>
			</td>
			<td class="image">
				<%= image_tag advertising.image.url(:medium) %>
			</td>
			<td>
				<%= advertising.title %>
			</td>
			<td>
				<%= advertising.description %>
			</td>
			<td>
				<%= link_to "Edit", edit_advertising_path(advertising) %>
			</td>
			<td>
				<%= link_to "Remove", advertising, :confirm => 'Are you sure?', :method => :delete %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>