<%= link_to "Back", admins_path %>
<%= link_to "+ New Process", new_step_path %>

<table>
	<thead>
		<tr>
			<th class="actions">
				Order
			</th>
			<th class="image">
				Image
			</th>
			<th class="text">
				Description
			</th>
			<th class="actions">
			</th>
			<th class="actions">
			</th>
		</tr>
	</thead>
	<tbody>
	<% @steps.each do |step| %>
		<tr>
			<td>
				<%= step.placement %>
			</td>
			<td class="image">
				<%= image_tag step.image.url(:medium) %>
			</td>
			<td>
				<%= step.description %>
			</td>
			<td>
				<%= link_to "Edit", edit_step_path(step) %>
			</td>
			<td>
				<%= link_to "Remove", step, :confirm => 'Are you sure?', :method => :delete %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>